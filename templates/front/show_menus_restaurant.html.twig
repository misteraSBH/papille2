{% extends 'base_front.html.twig' %}

{% block title %}Hello FrontController!{% endblock %}

{% block body %}
    <h1>Menu restaurant</h1>

    <div class="row">

        <div class="col-9">
        {%  for menu in menus %}
            {%  if menu.visible == 1 %}
                <div class="row border-bottom ">
                    <div class="col-12 font-weight-bold bg-dark text-white py-3 ">
                        {{ menu.name }}
                    </div>

                    <div class="row col-12 p-0">
                        <div class="col">
                            <p class="font-weight-bold m-0">DISHES</p>
                            <ul>
                                {% for dish in menu.dishes %}
                                    <li class="mb-1">
                                        {{ dish.name }}
                                        <a href="{{ path("app_cart_cartitem_product_add", {"id": app.session.get("app_current_cart").id, "idproduct": dish.id })}}" class="btn btn-primary btn-sm"><i class="fa fa-cart-plus"></i></a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="col">
                            <p class="font-weight-bold m-0">BEVERAGES</p>
                            <ul>
                                {% for beverage in menu.beverages %}
                                    <li class="mb-1">
                                        {{ beverage.name }}
                                        <a href="{{ path("app_cart_cartitem_product_add", {"id": app.session.get("app_current_cart").id, "idproduct": beverage.id })}}" class="btn btn-primary btn-sm"><i class="fa fa-cart-plus"></i></a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="col">
                            <p class="font-weight-bold m-0">DESSERTS</p>
                            <ul>
                                {% for dessert in menu.desserts %}
                                    <li class="mb-1">
                                        {{ dessert.name }}
                                        <a href="{{ path("app_cart_cartitem_product_add", {"id": app.session.get("app_current_cart").id, "idproduct": dessert.id })}}" class="btn btn-primary btn-sm"><i class="fa fa-cart-plus"></i></a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>

                </div>
            {%  endif %}
        {% endfor %}
        </div>

        <div class="col-3">
            {{ include('_cart.html.twig') }}
        </div>

    </div>
{% endblock %}
