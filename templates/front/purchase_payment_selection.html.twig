{% extends 'base_front.html.twig' %}

{% block title %}Hello PurchaseController!{% endblock %}

{% block body %}
    <h1>Select your payment method</h1>

    <div class="row mt-5">

        <form class="col-9" method="post" action="{{ path("app_purchase_add") }}">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentMethod" id="exampleRadios1" value="1">
                <label class="form-check-label" for="exampleRadios1">
                    Online Payment
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentMethod" id="exampleRadios2" value="2">
                <label class="form-check-label" for="exampleRadios2">
                    Cash
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentMethod" id="exampleRadios3" value="3">
                <label class="form-check-label" for="exampleRadios3">
                    Check
                </label>
            </div>
            <button class="btn btn-primary mt-3" type="submit">Confirm</button>
        </form>

        <div class="col-3">
            {{ include('_cart.html.twig') }}
        </div>

    </div>



{% endblock %}
